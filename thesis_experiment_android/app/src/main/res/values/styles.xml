<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Accent">
        <item name="android:statusBarColor">@color/accent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/ic_android</item>
        <item name="android:windowAnimationStyle">@style/ModalAnimation</item>
    </style>

    <style name="ModalAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_bottom</item>
    </style>

</resources>